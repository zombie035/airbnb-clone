<% if (errors.length > 0) { %>
  <div class="mb-6 animate-in fade-in slide-in-from-top-2 duration-300">
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-xl shadow-sm flex items-start">
      
      <div class="flex-shrink-0 text-red-500 mt-0.5">
        <i class="fas fa-exclamation-circle text-lg"></i>
      </div>

      <div class="ml-3 flex-1">
        <h3 class="text-sm font-bold text-red-800 uppercase tracking-tight">
          Please check the following:
        </h3>
        <div class="mt-1">
          <ul class="list-none space-y-1">
            <% errors.forEach(error => { %>
              <li class="text-sm text-red-700 flex items-center">
                <span class="w-1.5 h-1.5 bg-red-300 rounded-full mr-2"></span>
                <%= error %>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>

      <div class="ml-auto pl-3">
        <div class="flex items-center">
          <button type="button" class="text-red-400 hover:text-red-600 transition-colors" onclick="this.parentElement.parentElement.parentElement.remove()">
            <i class="fas fa-times text-sm"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
<% } %>

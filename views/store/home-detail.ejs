<style>
  :root {
    --airbnb-red: #FF385C;
    --airbnb-dark: #222222;
    --airbnb-light: #FFFFFF;
    --airbnb-gray: #717171;
    --airbnb-light-gray: #F7F7F7;
    --airbnb-border: #EBEBEB;
    --airbnb-star: #FF5A5F;
  }

  .airbnb-gradient {
    background: linear-gradient(135deg, var(--airbnb-red) 0%, #E31C5F 100%);
  }

  .airbnb-btn {
    background: var(--airbnb-red);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s ease;
    width: 100%;
    padding: 16px;
    font-size: 16px;
    border: none;
  }

  .airbnb-btn:hover {
    background: #E31C5F;
  }

  .airbnb-badge {
    background: var(--airbnb-red);
    color: white;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 12px;
    font-weight: 600;
    display: inline-block;
  }

  .airbnb-rating {
    color: var(--airbnb-star);
  }

  .airbnb-section-title {
    color: var(--airbnb-dark);
    font-weight: 600;
    font-size: 20px;
    margin-bottom: 16px;
  }

  /* Mobile Image Gallery */
  .mobile-gallery {
    position: relative;
    height: 320px;
    overflow: hidden;
  }

  .mobile-gallery img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gallery-indicator {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.5);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 14px;
  }

  /* Mobile Header */
  .mobile-header {
    padding: 16px;
    border-bottom: 1px solid var(--airbnb-border);
  }

  .mobile-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    border-top: 1px solid var(--airbnb-border);
    padding: 12px 16px;
    display: flex;
    justify-content: space-between;
    z-index: 100;
  }

  /* Info Cards */
  .info-card {
    background: white;
    padding: 20px;
    margin: 16px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }

  /* Amenities Grid */
  .amenity-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    margin-top: 16px;
  }

  .amenity-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .amenity-icon {
    color: var(--airbnb-red);
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  /* Review Cards */
  .review-card {
    background: var(--airbnb-light-gray);
    padding: 16px;
    border-radius: 12px;
    margin-bottom: 12px;
  }

  /* Sticky Bottom Bar */
  .sticky-bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    padding: 12px 16px;
    border-top: 1px solid var(--airbnb-border);
    box-shadow: 0 -2px 12px rgba(0, 0, 0, 0.1);
    z-index: 100;
  }

  /* Price Display */
  .price-display {
    display: flex;
    align-items: baseline;
    gap: 4px;
  }

  .price-amount {
    font-size: 22px;
    font-weight: 700;
    color: var(--airbnb-dark);
  }

  .price-period {
    color: var(--airbnb-gray);
    font-size: 14px;
  }

  /* Mobile Modal */
  .mobile-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: white;
    z-index: 1000;
    overflow-y: auto;
    display: none;
  }

  .modal-header {
    position: sticky;
    top: 0;
    background: white;
    padding: 16px;
    border-bottom: 1px solid var(--airbnb-border);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .modal-close {
    background: none;
    border: none;
    font-size: 24px;
    color: var(--airbnb-dark);
  }

  /* Touch-friendly elements */
  .touch-button {
    padding: 14px;
    min-height: 48px;
    font-size: 16px;
  }

  /* Better spacing for mobile */
  .mobile-spacing {
    padding-bottom: 80px; /* For bottom nav */
  }

  /* Hide desktop elements */
  .desktop-only {
    display: none;
  }

  /* Mobile-only elements */
  .mobile-only {
    display: block;
  }

  /* Swipeable tabs */
  .tab-container {
    display: flex;
    overflow-x: auto;
    padding: 16px;
    gap: 8px;
    scrollbar-width: none;
  }

  .tab-container::-webkit-scrollbar {
    display: none;
  }

  .tab-button {
    padding: 8px 16px;
    background: var(--airbnb-light-gray);
    border-radius: 20px;
    border: none;
    white-space: nowrap;
    font-size: 14px;
    color: var(--airbnb-gray);
  }

  .tab-button.active {
    background: var(--airbnb-red);
    color: white;
  }

  /* Mobile Collapsible */
  .collapsible {
    border-bottom: 1px solid var(--airbnb-border);
  }

  .collapsible-header {
    padding: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
  }

  .collapsible-content {
    padding: 0 16px 16px;
    display: none;
  }

  /* Responsive text sizes */
  .mobile-text-xl {
    font-size: 20px;
    font-weight: 600;
  }

  .mobile-text-lg {
    font-size: 18px;
    font-weight: 600;
  }

  .mobile-text-md {
    font-size: 16px;
  }

  .mobile-text-sm {
    font-size: 14px;
    color: var(--airbnb-gray);
  }

  /* Map placeholder for mobile */
  .mobile-map {
    height: 200px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 16px;
    color: white;
  }

  /* Photos modal */
  .photos-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: black;
    z-index: 1001;
    display: none;
  }

  .photo-viewer {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .photo-viewer img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  @media (min-width: 768px) {
    .mobile-only {
      display: none;
    }
    
    .desktop-only {
      display: block;
    }
  }
</style>
</head>

